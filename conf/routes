# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /list                       controllers.Application.listOfCourses()

# Course
GET     /course/:id                 controllers.Courses.viewCourse(id: String)

# Study Group
GET     /create/studyGroup          controllers.StudyGroups.createStudyGroup()
GET     /create/new/studyGroup      controllers.StudyGroups.addStudyGroup()
GET     /view/studyGroup/:id        controllers.StudyGroups.viewStudyGroup(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
